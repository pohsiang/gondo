<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MainActivityActionBarStyle</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MainActivityActionBarStyle</item>
    </style>

    <style name="MainActivityActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:background">@color/action_bar_color</item>
    </style>

</resources>
